{
// -------------------------------------------------------------------------
// General modules
// -------------------------------------------------------------------------
    "clock": {
        "interval": 60,
        "format": "{:%H:%M}",
        "tooltip-format": "<big><tt>{calendar}</tt></big>",
        "calendar": {
            "on-scroll" : 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#bd93f9'><b><u>{}</u></b></span>"
            }
        }
    },

    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 4
        }
    },

    "tray": {
        "icon-size": 25,
        "spacing": 10
    },

    "hyprland/language": {
        "format": "{}",
        "format-en": "US",
        "format-ru": "RU",
        "on-click": "hyprctl switchxkblayout semico-usb-keyboard-1 next"
    },

// -------------------------------------------------------------------------
// Resource monitoring
// -------------------------------------------------------------------------

    "cpu": {
        "interval": 10,
        "format": "  {usage}%", // Icon: microchip: 
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty htop"
    },

    "memory": {
        "interval": 10,
        "format": "MEM: {}%", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "kitty htop"
    },

    "network": {
        "interval": 30,
        "format-wifi": " ", // Icon: wifi
        "format-ethernet": "{ipaddr}/{cidr}", // Icon: ethernet
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "󰖪 ",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({bandwidthDownBytes})</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>",
        "on-click": "/home/$USER/scripts/rofi/wifi-menu.sh"
    },

    
// -------------------------------------------------------------------------
// System power management
// -------------------------------------------------------------------------

    "custom/power": {
        "format": "", // arch icon
        "on-click": "/home/$USER/scripts/rofi/powermenu-hypr.sh",
        "tooltip": false
    },
}
